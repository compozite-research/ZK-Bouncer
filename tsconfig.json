{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs", 
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist", // Specifies where compiled files go
    "rootDir": "./src", // Tells TypeScript where source files are
    "noEmit": false,    // Allow emit of .js files
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}